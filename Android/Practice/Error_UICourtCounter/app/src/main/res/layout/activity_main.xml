<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation ="horizontal"
    android:id = "@+id/mainLayout"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:context=".MainActivity"
    android:orientation ="vertical"
    >

    <TextView
        android:text="Team A"
        android:textColor="#616161"
        android:fontFamily="sans-serif-medium"
        android:textSize="14sp"
        android:textAllCaps = "true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="4dp"
        />

    <TextView
        android:text="0"
        android:fontFamily="sans-serif-light"
        android:textSize="56sp"
        android:textColor="#000000"
        android:id = "@+id/team_a_score"
        android:textAllCaps = "true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="4dp"
        />

    <Button
        android:text="+3 Points"
        android:id = "@+id/button3"
        android:textAllCaps = "true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick = "addNumA3"
        />
    <Button
        android:text="+2 Points"
        android:id = "@+id/button2"
        android:onClick = "addNumA2"
        android:textAllCaps = "true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        />
    <Button
        android:text="free throw"
        android:id = "@+id/button1"
        android:onClick = "addNumA1"
        android:textAllCaps = "true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        />
</LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"

        android:background="@android:color/darker_gray"

        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:context=".MainActivity"
        android:orientation ="vertical"
        >

        <TextView
            android:text="Team B"
            android:fontFamily="sans-serif-medium"
            android:textSize="14sp"
            android:textColor="#616161"
            android:textAllCaps = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="4dp"
            />

        <TextView
            android:text="0"
            android:fontFamily="sans-serif-light"
            android:textSize="56sp"
            android:textColor="#000000"
            android:id = "@+id/team_b_score"
            android:textAllCaps = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="4dp"
            />

        <Button
            android:text="+3 Points"
            android:id = "@+id/button3b"
            android:textAllCaps = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick = "addNumB3"
            />
        <Button
            android:text="+2 Points"
            android:id = "@+id/button2b"
            android:onClick = "addNumB2"
            android:textAllCaps = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />
        <Button
            android:text="free throw"
            android:id = "@+id/button1b"
            android:onClick = "addNumB1"
            android:textAllCaps = "true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            />
    </LinearLayout>

</LinearLayout>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text = "reset"
    android:onClick = "reset"
    android:layout_marginBottom="32dp"
    />

</RelativeLayout>